<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape>
            <solid android:color="#80000000"/> <!-- Shadow color -->
            <corners android:radius="100dp"/>
        </shape>
    </item>

    <!-- Main Circle Layer -->
    <item>
        <shape>
            <solid android:color="@color/ewgreen"/> <!-- Gold color for points -->
            <corners android:radius="100dp"/> <!-- Makes the shape circular -->
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"
                android:bottom="20dp"/>
        </shape>
    </item>
</layer-list>
